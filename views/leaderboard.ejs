<%- include("partials/header"); -%>

<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div style="background-color:#E8E8E8;" class="container-fluid-leaderboard">
  <div style="background-color:#E8E8E8;" class="container-fluid">

    <div class="row">
      <div class=" col-lg-3 col-sm-12">
        <hr>
      </div>
      <div style="background-color:#12a4d9" class="col-lg-6 col-sm-12 about-head">
        <h2 style="text-shadow: 2px 2px black;" class="details-heading">LEADERBOARD</h2>
      </div>
      <div class=" col-lg-3 col-sm-12">
        <hr>
      </div>
      <div class="col-12 ">
        <hr>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 about-head">
      <h2 class="details-heading">GROUP-A</h2>
    </div>

    <div class="col-md-6 ">
      <hr>
      <hr>
    </div>
    <div class="col-12 ">
      <hr>
      <hr>
    </div>
  </div>

  <div class="container-fluid">
    <table style="color: #042e27;" class="table table-striped">
      <thead class="justify-content-center thead-players">
        <tr>
          <th>#</th>
          <th>Team</th>
          <th>Matches</th>
          <th>Win</th>
          <th>Lost</th>
          <th>Tie</th>
          <th>Points</th>
          <th>Team Rounds</th>
        </tr>
      </thead>
      <tbody>
        <% let i=0;%>
        <%  vTeams.forEach(function(team){ %>
        <%if(team.teamGroup=="A") { %>
        <%  i++;%>
        <tr>
          <th><%= i%></th>
          <td><%=team.teamName%></td>
          <td><%=team.teamMatch%></td>
          <td><%=team.teamWins%></td>
          <td><%=team.teamLoss%></td>
          <td><%=team.teamTies%></td>
          <td><%=team.teamPoints%></td>
          <td><%=team.teamKills%></td>
        </tr>
        <% } %>
        <% }) %>
      </tbody>
    </table>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-6 about-head">
      <h2 class="details-heading">GROUP-B</h2>
    </div>
    <div class="col-md-6 ">
      <hr>
      <hr>
    </div>
    <div class="col-12 ">
      <hr>
      <hr>
    </div>
  </div>
  <div class="container-fluid">
