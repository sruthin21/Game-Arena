          <th>Team</th>
          <th>Matches</th>
          <th>Win</th>
          <th>Lost</th>
          <th>Tie</th>
          <th>Points</th>
          <th>Team Rounds</th>
        </tr>
      </thead>
      <tbody>
        <% let j=0;%>
        <%  vTeams.forEach(function(team){ %>

        <%if(team.teamGroup=="B") { %>
        <%  j++;%>
        <tr>
          <th><%=j%></th>
          <td><%=team.teamName%></td>
          <td><%=team.teamMatch%></td>
          <td><%=team.teamWins%></td>
          <td><%=team.teamLoss%></td>
          <td><%=team.teamTies%></td>
          <td><%=team.teamPoints%></td>
          <td><%=team.teamKills%></td>
        </tr>
        <% } %>
        <% }) %>
      </tbody>
    </table>
  </div>

  <hr>

